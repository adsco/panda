<div class="row">
    <div class="errors">
        {{ form_errors(form.email) }}
        {{ form_errors(form.username) }}
        {{ form_errors(form.plainPassword) }}
        {{ form_errors(form.profile.name) }}
        {{ form_errors(form.profile.phone) }}
    </div>
</div>
<div class="row">
    {{ form_start(form, {'method': 'post', 'action': path('fos_user_registration_register'), 'attr': {'class': 'fos_user_registration_register'}}) }}
    <div class="col-lg-6">
        <fieldset>
            <h4>{% trans %}Account{% endtrans %}</h4>
            <div class="form-group">
                {{ form_label(form.email) }}
                {{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
            </div>
            <div class="form-group">
                {{ form_label(form.username) }}
                {{ form_widget(form.username, {'attr': {'class': 'form-control'}}) }}
            </div>
            <div class="form-group">
                {{ form_label(form.plainPassword.first) }}
                {{ form_widget(form.plainPassword.first, {'attr': {'class': 'form-control'}}) }}
            </div>
            <div class="form-group">
                {{ form_label(form.plainPassword.second) }}
                {{ form_widget(form.plainPassword.second, {'attr': {'class': 'form-control'}}) }}
            </div>
        </fieldset>
    </div>
    <div class="col-lg-6">
        <h4>{% trans %}Profile{% endtrans %}</h4>
        <div class="form-group">
            {{ form_label(form.profile.name) }}
            {{ form_widget(form.profile.name, {'attr': {'class': 'form-control'}}) }}
        </div>
        <div class="form-group">
            <label for="{{ form.profile.phone.vars.id }}">
                {{ form.profile.phone.vars.label|trans }}
                <span class="note">({% trans %}ex.{% endtrans %} 0123456789)</span>
            </label>
            {{ form_widget(form.profile.phone, {'attr': {'class': 'form-control'}}) }}
        </div>
        <div>
            <input type="submit" value="{{ 'registration.submit'|trans }}" class="btn btn-default btn-large" />
        </div>
    </div>
    {{ form_end(form) }}
</div>