<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no">
        <title>
            {% block title %}
                {% trans %}Welcome!{% endtrans %}
            {% endblock %}
        </title>
        {% block stylesheets %}
            {% stylesheets 'bundles/app/css/bootstrap.min.css'
                'bundles/app/css/main.css'
                'bundles/app/fancybox/jquery.fancybox.css' filter="cssrewrite" %}
                <link rel="stylesheet" href="{{ asset_url }}" />
            {% endstylesheets %}
        {% endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    </head>
    <body>
        <div class="container-fluid">
            <div class="row" id="header-strip-top">
                <div class="container">
                    {% block header_top %}
                        {% include 'AppBundle:Header:header_top.html.twig' %}
                    {% endblock %}
                </div>
            </div>
            <div class="row" id="header-strip-middle">
                <div class="container">
                    {% block header_middle %}
                        {% include 'AppBundle:Header:header_middle.html.twig' with {'account': true, 'cart': true} %}
                    {% endblock %}
                </div>
            </div>
            <div class="row" id="header-strip-bottom">
                <div class="container">
                    {% block menu %}
                        {{ render(controller('AppBundle:Navigation:menu')) }}
                    {% endblock %}
                </div>
            </div>
            <div class="row body-wrapper">
                <div class="container body-content">
                    {% block body %}{% endblock %}
                </div>
            </div>
            <div class="row">
                {% block footer %}
                    {% include 'AppBundle:Footer:footer.html.twig' %}
                {% endblock %}
            </div>
        </div>
        {% block javascripts %}
            {% javascripts '@AppBundle/Resources/public/js/jquery-1.11.3.min.js'
                '@AppBundle/Resources/public/js/bootstrap.min.js'
                '@AppBundle/Resources/public/fancybox/jquery.fancybox.js'
                '@AppBundle/Resources/public/js/fancybox.js' %}
                <script src="{{ asset_url }}"></script>
            {% endjavascripts %}
        {% endblock %}
    </body>
</html>
