<form method="post" action="{{ path('order_submit') }}">
    <div class="row">
        <div class="col-lg-6">
            <h4>Delivery address</h4>
            <div class="form-group">
                {{ form_label(form.delivery_address.street) }}
                {{ form_widget(form.delivery_address.street, {'attr': {'class': 'form-control'}}) }}
            </div>
            <div class="form-group">
                {{ form_label(form.delivery_address.building) }}
                {{ form_widget(form.delivery_address.building, {'attr': {'class': 'form-control'}}) }}
            </div>
            <div class="form-group">
                {{ form_label(form.delivery_address.porch) }}
                {{ form_widget(form.delivery_address.porch, {'attr': {'class': 'form-control'}}) }}
            </div>
            <div class="form-group">
                {{ form_label(form.delivery_address.apartment) }}
                {{ form_widget(form.delivery_address.apartment, {'attr': {'class': 'form-control'}}) }}
            </div>
            <div class="form-group">
                {{ form_label(form.delivery_address.intercome_code) }}
                {{ form_widget(form.delivery_address.intercome_code, {'attr': {'class': 'form-control'}}) }}
            </div>
            <div class="form-group">
                {{ form_label(form.delivery_address.note) }}
                {{ form_widget(form.delivery_address.note, {'attr': {'class': 'form-control'}}) }}
            </div>
        </div>
        <div class="col-lg-6">
            <h4>Personal info</h4>
            <div class="form-group">
                {{ form_label(form.order_user_profile.name) }}
                {{ form_widget(form.order_user_profile.name, {'attr': {'class': 'form-control'}}) }}
            </div>
            <div class="form-group">
                {{ form_label(form.order_user_profile.phone) }}
                {{ form_widget(form.order_user_profile.phone, {'attr': {'class': 'form-control'}}) }}
            </div>
            <div class="form-group">
                {{ form_label(form.change) }}
                {{ form_widget(form.change, {'attr': {'class': 'form-control'}}) }}
            </div>
            <input type="submit" value="Submit" class="btn btn-default btn-large" />
        </div>
    </div>
</form>
