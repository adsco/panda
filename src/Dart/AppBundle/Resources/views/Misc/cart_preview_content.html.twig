<div class="cart-preview">
    <ul class="content">
    {% for item in items %}
        {% set product = item.getItem %}
        <li>
            <div class="clearfix">
                <div class="image">
                    <img src="{{ asset(('/uploads/images/sources/' ~ product.image) | imagine_filter('thumb_cart')) }}" />
                </div>
                <div class="title">
                    {{ item.quantity }} x {{ product.name }}
                </div>
                <span class="price">
                    {{ product.price * item.quantity }} $
                </span>
                <div class="remove-link">
                    <a href="#" class="cart-item-remove btn-product-remove" data-product-id="{{ item.id }}">
                        X
                    </a>
                </div>
            </div>
        </li>
    {% endfor %}
    </ul>
    <div class="clearfix">
        <a href="{{ path('order_show') }}" class="btn btn-default btn-large pull-right">{% trans %}Submit{% endtrans %}</a>
    </div>
</div>